<h1>Listing quotes</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Content</th>
    <th>Written at</th>
    <th>Language</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%= quote.author %></td>
    <td><%= quote.content %></td>
    <td><%= quote.written_at %></td>
    <td><%= quote.language %></td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

